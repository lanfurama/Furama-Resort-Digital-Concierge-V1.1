{
  "name": "furama-digital-concierge",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx server.js",
    "dev:win": "set NODE_ENV=development && tsx server.js",
    "dev:https": "cross-env NODE_ENV=development ENABLE_HTTPS=true tsx server.js",
