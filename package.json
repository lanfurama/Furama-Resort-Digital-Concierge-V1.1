    "@capacitor/haptics": "^6.0.2",
    "@capacitor/keyboard": "^6.0.2",
    "@capacitor/status-bar": "^6.0.2",
    "@google/genai": "^1.30.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
